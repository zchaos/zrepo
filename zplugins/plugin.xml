<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="zchaos Action Set"
            visible="true"
            id="com.zchaos.zplugins.core.actionSet">
         <menu
               label="zchaos"
               id="zchaosMenu">
            <separator
                  name="zchaosGroup">
            </separator>
         </menu>
         <action
               label="&amp;Sample Action"
               icon="icons/sample.gif"
               class="com.zchaos.zplugins.core.actions.SampleAction"
               tooltip="Zplugins"
               menubarPath="zchaosMenu/zchaosGroup"
               toolbarPath="zchaosGroup"
               id="com.zchaos.zplugins.core.actions.SampleAction">
         </action>
      </actionSet>
      <actionSet
            id="org.zchaos.zplugins.actionset.bookmark.add"
            label="Quick Add Bookmark"
            visible="true">
         <action
               class="com.zchaos.zplugins.internal.qbookmark.QuickAddBookmarkActionHandler"
               definitionId="org.zchaos.zplugins.bookmark.add2"
               id="org.zchaos.zplugins.action.bookmark.add2"
               label="Quick Add Bookmark 2">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="com.zchaos.zplugins.core.startup.DependenciesSortStartup">
      </startup>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="com.zchaos.zplugins.internal.qbookmark.QuickAddBookmarkCommandHandler"
            id="org.zchaos.zplugins.bookmark.add1"
            name="Quick Add Bookmark 1">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.zchaos.zplugins.bookmark.show"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Alt+1">
      </key>
      <key
            commandId="org.zchaos.zplugins.bookmark.add1"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+1">
      </key>
      <key
            commandId="org.zchaos.zplugins.bookmark.add2"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+3">
      </key>
   </extension>

</plugin>
